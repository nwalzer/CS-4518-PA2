<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasketballCounter">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/game_label"
            android:padding="24dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="@string/game_lab" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:divider="#000000"
            android:showDividers="middle"
            android:orientation="horizontal" >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="@string/team_a" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/point_label_a"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="@string/zero" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/three_point_a"
                    android:text="@string/three_points"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/two_point_a"
                    android:text="@string/two_points" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/free_throw_a"
                    android:text="@string/free_throw" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="@string/team_b" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/point_label_b"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:text="@string/zero" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/three_point_b"
                    android:text="@string/three_points"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/two_point_b"
                    android:text="@string/two_points" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/free_throw_b"
                    android:text="@string/free_throw" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:id="@+id/reset"
                    android:text="@string/reset" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/prev_btn"
                        android:text="@string/prev_lab"
                        tools:ignore="ButtonStyle" />
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/next_btn"
                        android:text="@string/next_lab"
                        tools:ignore="ButtonStyle" />
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:id="@+id/add_game"
                    android:text="@string/add_game" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>